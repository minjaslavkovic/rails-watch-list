
<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(<%= cl_image_path(@list.photo.key) if @list.photo.attached? %>)">
  <div class="container">
    <h1><%= @list.name %> movies</h1>
  </div>
</div>

<div class="container d-flex justify-content-between">
  <button class="btn btn-secondary">
    <%= link_to "add a movie", new_list_bookmark_path(@list), style: 'color: white' %>
  </button>
  <button class="btn btn-secondary">
    <%= link_to "delete this list", list_path(@list), style: 'color: white', method: :delete, data: { confirm: "Are you sure you want to delete this list?" } %>
  </button>
</div>

<div class="container movie">
  <div class="cards">
    <% @list.bookmarks.each do |bookmark| %>
    <div class="card movie">
      <div class="card-header" style="background-image: url(<%= bookmark.movie.poster_url %>"></div>
      <div class="card-body">
        <div class="movie-name-rating d-flex justify-content-between">
          <h2><span><%= bookmark.movie.title %></span></h2>
          <p><i class="fa fa-star"></i> <%= bookmark.movie.rating %></p>
        </div>
        <p><%= bookmark.movie.overview %></p>
        <p><%= bookmark.comment %></p>
      </div>
    </div>
    <% end %>
  </div>
</div>


