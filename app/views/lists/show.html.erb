<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(https://images.unsplash.com/photo-1568876694728-451bbf694b83?ixlib=rb-1.2.1&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=1332&q=80;">
  <div class="container">
    <h1><%= @list.name %> movies</h1>
  </div>
</div>


<div class="container movie">
 <% @list.movies.each do |movie| %>
 <% bookmark = Bookmark.find_by(list: @list, movie: movie) %>
  <div class="card movie">
    <div class="card-header">
      <img src="https://images.unsplash.com/photo-1532568547949-a09f1afe4d1b?ixlib=rb-1.2.1&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=1470&q=80"/>
    </div>
    <div class="card-body">
      <h2><span><%= movie.title %></span>
      </h2>
      <p><%= movie.overview %>
      </p>
      <p><%= bookmark.comment %></p>
    </div>
  </div>
  <% end %>
</div>

